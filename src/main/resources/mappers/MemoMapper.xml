<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace="xml파일과 세트인 mapper interface의 풀네임이 들어가야 한다. -->

<mapper namespace="com.green.memoserver.MemoMapper">

    <insert id="save">
        INSERT INTO memo
        SET title = #{title}
        , content = #{ctnts}
    </insert>

    <select id="findAll" resultType="com.green.memoserver.model.MemoGetRes">
        SELECT id, title, content, created_at
        FROM memo
        <if test="searchText != null and searchText != '' ">
            WHERE title LIKE CONCAT('%', #{searchText}, '%')
            OR content LIKE CONCAT('%', #{searchText}, '%')
        </if>
        ORDER BY id DESC
    </select>

    <select id="findById">
        SELECT *
        FROM memo
        Where id = #{id}
    </select>

    <delete id="deleteById">
        DELETE FROM memo
        WHERE id = #{id}
    </delete>
</mapper>





